<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
		   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		   xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<services>

		<service id="certification.repository.user" class="Certification\Module\User\Repository\DoctrineOrm\UserRepository"
				 factory-service="doctrine.orm.entity_manager"
				 factory-method="getRepository">
			<argument>Certification\Module\User\Entity\User</argument>
		</service>

		<service id="certification_user.form_handler.login_check" class="Certification\UserBundle\Form\Handler\LoginHandler">
			<argument type="service" id="certification.repository.user" />
		</service>

		<service id="certification_user.service.security" class="Certification\Module\User\Service\UserSecurityService">
			<argument type="service" id="certification.repository.user" />
			<argument type="service" id="security.encoder_factory" />
		</service>

	</services>

</container>