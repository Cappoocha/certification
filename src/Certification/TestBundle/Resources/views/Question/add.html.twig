{% extends "::base.html.twig" %}

{% block title %}Tests{% endblock %}

{% block body %}
	<div class="container">
		{% block page_header %}
			<h1>Добавление вопроса к тесту {{ test.title }}</h1>
		{% endblock %}

			{{ form_start(questionForm, {'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} } ) }}
                <div class="form-group">
                    <label for="title" class="col-sm-2 control-label">Title</label>
                    <div class="col-sm-10">
                        {{ form_widget(questionForm.title, { 'attr': {'class': 'form-control', 'placeholder' : 'Title'} }) }}
						{{ form_errors(questionForm.title) }}
                    </div>
                </div>

                <div class="form-group">
                    <label for="score" class="col-sm-2 control-label">Score</label>
                    <div class="col-sm-10">
                        {{ form_widget(questionForm.score, { 'attr': {'class': 'form-control', 'placeholder' : 'Score'} }) }}
						{{ form_errors(questionForm.score) }}
                    </div>
                </div>

                <div class="form-group">
                    <label for="answer_one" class="col-sm-2 control-label">Answer 1</label>
                    <div class="col-sm-5">
                        {{ form_widget(questionForm.answer_one, { 'attr': {'class': 'form-control', 'placeholder' : 'Answer 1'} }) }}
						{{ form_errors(questionForm.answer_one) }}
                    </div>
                    <div class="col-sm-5">
                        <div class="checkbox">
                            <label>
                                {{ form_widget(questionForm.checkbox_one) }}Is right
							</label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="answer_two" class="col-sm-2 control-label">Answer 2</label>
                    <div class="col-sm-5">
                        {{ form_widget(questionForm.answer_two, { 'attr': {'class': 'form-control', 'placeholder' : 'Answer 2'} }) }}
						{{ form_errors(questionForm.answer_two) }}
                    </div>
                    <div class="col-sm-5">
                        <div class="checkbox">
                            <label>
                                {{ form_widget(questionForm.checkbox_two) }}Is right
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="answer_three" class="col-sm-2 control-label">Answer 3</label>
                    <div class="col-sm-5">
                        {{ form_widget(questionForm.answer_three, { 'attr': {'class': 'form-control', 'placeholder' : 'Answer 3'} }) }}
						{{ form_errors(questionForm.answer_three) }}
                    </div>
                    <div class="col-sm-5">
                        <div class="checkbox">
                            <label>
                                {{ form_widget(questionForm.checkbox_three) }}Is right
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="answer_four" class="col-sm-2 control-label">Answer 4</label>
                    <div class="col-sm-5">
                        {{ form_widget(questionForm.answer_four, { 'attr': {'class': 'form-control', 'placeholder' : 'Answer 4'} }) }}
						{{ form_errors(questionForm.answer_four) }}
                    </div>
                    <div class="col-sm-5">
                        <div class="checkbox">
                            <label>
                                {{ form_widget(questionForm.checkbox_four) }}Is right
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="submit" class="col-sm-2 control-label"></label>
                    <div class="col-sm-5">
						{{ form_widget(questionForm.save, { 'attr': {'class': 'btn btn-primary'}, 'label': 'Сохранить' }) }}
						<a class="btn btn-danger" href="{{ path('certification_test_view', {'testId' : test.id}) }}" role="button">Отмена</a>
                    </div>
                </div>

			{{ form_end(questionForm) }}
    </div>
{% endblock %}