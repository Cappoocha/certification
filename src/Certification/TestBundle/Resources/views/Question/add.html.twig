                        {#<input type="text" required ng-maxlength="150" class="form-control" id="score" name="score" placeholder="Score" />#}
                    </div>
                </div>

                <div class="form-group">
                    <label for="answer_one" class="col-sm-2 control-label">Answer 1</label>
                    <div class="col-sm-5">
                        {{ form_errors(form.answer_one) }}
                        {{ form_widget(form.answer_one, { 'attr': {'class': 'form-control', 'placeholder' : 'Answer 1'} }) }}
                        {#<input type="text" required ng-maxlength="150" class="form-control" id="answer_one" name="answer_one" placeholder="Answer 1" />#}
                    </div>
                    <div class="col-sm-5">
                        <div class="checkbox">
                            <label>
                                {{ form_widget(form.checkbox_one) }}Is right
