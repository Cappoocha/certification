{% extends "::base.html.twig" %}

{% block title %}Tests{% endblock %}

{% block body %}

    {#{{ test.title }}#}
    {#{{ test.time }}#}
    {#{{ test.calculation }}#}

    <div class="row">
        <div class="col-xs-1 col-sm-1 col-md-1"></div>
        <div class="col-xs-10 col-sm-10 col-md-10">
            <form action="" method="post" class="form-horizontal" novalidate="novalidate">
                {{ form_errors(form) }}
                <div class="form-group">
                    <label for="title" class="col-sm-2 control-label">Title</label>
                    <div class="col-sm-10">
                        {{ form_errors(form.title) }}
                        {{ form_widget(form.title, { 'attr': {'class': 'form-control', 'placeholder' : 'Title'} }) }}
                        {#<input type="text" required ng-maxlength="150" class="form-control" id="title" name="title" placeholder="Title" />#}
                    </div>
                </div>

                <div class="form-group">
                    <label for="score" class="col-sm-2 control-label">Score</label>
                    <div class="col-sm-10">
                        {{ form_errors(form.score) }}
