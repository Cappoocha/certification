                    <label for="answer_three" class="col-sm-2 control-label">Answer 3</label>
                    <div class="col-sm-5">
                        {{ form_errors(form.answer_three) }}
                        {{ form_widget(form.answer_three, { 'attr': {'class': 'form-control', 'placeholder' : 'Answer 3'} }) }}
                        {#<input type="text" required ng-maxlength="150" class="form-control" id="answer_three" name="answer_three" placeholder="Answer 3" />#}
                    </div>
                    <div class="col-sm-5">
                        <div class="checkbox">
                            <label>
                                {{ form_widget(form.checkbox_three) }}Is right
                                {#<input type="checkbox" name="checkbox_three" id="checkbox_three"> Is right#}
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="answer_four" class="col-sm-2 control-label">Answer 4</label>
                    <div class="col-sm-5">
                        {{ form_errors(form.answer_four) }}
