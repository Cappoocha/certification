{% extends "::base.html.twig" %}

{% block title %}Tests{% endblock %}

{% block body %}
	<div class="container">
		{% block page_header %}
			<h1>Tests</h1>
		{% endblock %}

		{% if tests %}
			<table class="table table-condensed">
				<thead>
				<tr>
					<th>Id</th>
					<th>Title</th>
					<th>Time</th>
					<th></th>
				</tr>
				</thead>
				<tbody>
					{% for test in tests %}
						<tr>
							<td>{{ test.id }}</td>
							<td>{{ test.title }}</td>
							<td>{{ test.time }}</td>
							<td>
								<a class="btn btn-primary" href="#" role="button">Начать тест</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		{% else %}
			Nothing to show
		{% endif %}
	</div>
{% endblock %}