<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="certification.repository.test"
                class="Certification\Module\Test\Repository\DoctrineOrm\TestRepository"
                factory-service="doctrine.orm.entity_manager"
                factory-method="getRepository">
            <argument>Certification\Module\Test\Entity\Test</argument>
        </service>

        <service id="certification.service.test" class="Certification\Module\Test\Service\TestService">
            <argument type="service" id="certification.repository.test" />
        </service>

    </services>

</container>